<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/lviDeviceItem"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin" >

	<TextView
		android:id="@+id/txtDeviceName"
		android:text="DummyName"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/lblDeviceAddress"
			android:text="Address:"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			/>

		<TextView
			android:id="@+id/txtDeviceAddress"
			android:text="[DummyAddress]"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			>

			<TextView
				android:id="@+id/lblDeviceRssi"
				android:text="Rssi:"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				/>

			<TextView
				android:id="@+id/txtDeviceRssi"
				android:text="DummyRssi"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="2"
			>

			<TextView
				android:id="@+id/lblDeviceDistance"
				android:text="Distance:"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				/>

			<TextView
				android:id="@+id/txtDeviceDistance"
				android:text="DummyDistance"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				/>

		</LinearLayout>

	</LinearLayout>



</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:longClickable="true"
	>

	<TextView
		android:id="@+id/lblLocationName"
		android:text="Location Name:"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignParentStart="true"
		/>

	<TextView
		android:id="@+id/txtLocationName"
		android:text="DummyLocation"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textStyle="bold"
		android:layout_marginLeft="10dp"
		android:layout_alignTop="@id/lblLocationName"
		android:layout_toEndOf="@id/lblLocationName"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/lblLocationName"
		android:layout_marginTop="10dp"
		android:orientation="horizontal"
		>

		<TextView
			android:id="@+id/lblBeaconsList"
			android:text="Beacons: "
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingTop="5dp"
			android:paddingBottom="5dp"
			/>

		<ListView
			android:id="@+id/lvLocationBeacons"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			/>

	</LinearLayout>


</RelativeLayout>
